<% include partials/_header %>

<style>
  .container {
    margin-top: 50px;
  }

  .card {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .card-title {
    font-size: 20px;
    font-weight: bold;
    color: #333;
  }

  .card-text {
    color: #666;
  }

  .btn-primary {
    background-color: #007bff;
    border-color: #007bff;
  }

  .btn-primary:hover {
    background-color: #0056b3;
    border-color: #0056b3;
  }
</style>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mt-3">Mis Asignaturas <%= asignaturas[0].grado %></h2>
      <% asignaturas.forEach(asignatura => { %>
        <div class="card my-4">
          <div class="card-body">
            <h5 class="card-title"><strong>Nombre:</strong> <%= asignatura.nombre %></h5>
            <hr> <!-- Línea divisoria -->
            <p class="card-text"><strong>Descripción:</strong> <%= asignatura.descripcion %></p>
            <a href="/asignatura/<%= asignatura._id %>/urls" class="btn btn-primary">Ver contenidos</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<% include partials/_footer %>