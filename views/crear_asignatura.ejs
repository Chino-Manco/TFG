<% include partials/_header %>

<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card mt-5">
        <div class="card-body">
          <h3 class="card-title text-center">Crear Nueva Asignatura</h3>
          <form action="/crear_asignatura" method="POST">
            <div class="form-group">
              <label for="nombre">Nombre de la Asignatura</label>
              <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre de la Asignatura" required>
            </div>
            <div class="form-group">
              <label for="descripcion">Descripción</label>
              <textarea class="form-control" id="descripcion" name="descripcion" placeholder="Descripción de la Asignatura" required></textarea>
            </div>
            <div class="form-group">
              <label for="grado">Grado</label>
              <textarea class="form-control" id="grado" name="grado" placeholder="Grado de la Asignatura" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Crear Asignatura</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer %>