<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Trabajo AD</title>
    <!-- BOOTSTRAP CDN -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css">
    <!-- GOOGLE FONTS -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700&display=swap" rel="stylesheet">
    <!-- ESTILOS CUSTOM -->
    <link rel="stylesheet" href="/stylesheets/header.css">           
    
    

</head>
<body>
<!--Navbar-->
<nav class="navbar navbar-expand-lg navbar-custom">
    <a class="navbar-brand" href="/">Tienda de Alimentación</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item" style="margin-left: 10px;">
                    <a class="nav-link" href="/catalogo">Inicio</a>
                </li>      
            </ul>


            <% if (typeof productos !== 'undefined') { %>
                <div class="collapse navbar-collapse justify-content-center" id="navbarSupportedContent">
                    <form id="busquedaForm" action="/catalogo" method="GET" class="form-inline my-2 my-lg-0" style="margin-right: 50px;">
                        <input id="busquedaInput" class="form-control mr-sm-2" type="text" name="terminoBusqueda" placeholder="Buscar..." style="flex-grow: 1;">
                        <button type="submit" class="btn btn-primary my-2 my-sm-0">
                            <i class="bi bi-search"></i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                            </svg>
                        </button>
                    </form>
                </div>

                <script src="/js/header.js"></script>

            <% } %>



            <!-- Utiliza mr-auto en el contenedor del botón -->
            <ul class="navbar-nav">
                <% if (!user) { %>
                    <li class="nav-item mr-auto">
                        <a class="nav-link btn btn-primary" href="/signin">Acceder</a>
                    </li>                                
                    <!-- Opciones de navegación para usuarios no registrados -->
                <% } else if (user.rol === "Empleado") { %>
                    <!-- Opciones de navegación para Empleados -->
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log out</a>
                    </li>
                <% } else if (user.rol === "Administrador"){ %>
                    <!-- Opciones de navegación para Administradores -->
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/validar">Validar</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/subirProducto">Crear nuevos Productos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log out</a>
                    </li>
                <% } else if ((user.rol === "Cliente")) { %>
                    <!-- Opciones de navegación para Clientes -->
                    <li class="nav-item">
                        <a class="nav-link" href="/profile">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Log out</a>
                    </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <!-- BOOTSTRAP JS CDN -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
</body>
</html>
