<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/stylesheets/login.css">
  <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
  <script src="/js/login.js"></script>
</head>
<body>
<div class="form">
  <div class="form-toggle"></div>

  <!-- Login-->
  <div class="form-panel one">
    <div class="form-header">
      <h1>Iniciar Sesión</h1>
    </div>
    <div class="form-content">
      <form action="/signin" method="post">
        <div class="form-group">
          <label for="lemail">Email</label>
          <input id="lemail" type="email" name="lemail" required="required"/>
        </div>
        <div class="form-group">
          <label for="lpassword">Contraseña</label>
          <input id="lpassword" type="password" name="lpassword" required="required"/>
          <div id="signinMessage" style=" color: rgb(249, 134, 134); font-size: 16px; font-weight: bold;"><%= signinMessage %></div>
        </div>
        <div class="form-group">
          <label class="form-remember">
            <input type="checkbox"/>Remember Me
          </label><a class="form-recovery" href="#">Forgot Password?</a>
        </div>
        <div class="form-group">
          <button type="submit">Log In</button>
        </div>
      </form>
    </div>
  </div>

  <!-- SignUp-->
  <div class="form-panel two">
    <div class="form-header">
      <h1>Registrar Usuario</h1>
    </div>
    <div class="form-content">
      <form action="/signup" method="post" onsubmit="return validatePasswords()">
        <div class="form-group">
          <label for="nombre">Nombre</label>
          <input id="nombre" type="text" name="nombre" required="required"/>
        </div>
        <div class="form-group">
          <label for="apellidos">Apellidos</label>
          <input id="apellidos" type="text" name="apellidos" required="required"/>
        </div>
        <div class="form-group">
          <label for="edad">Edad</label>
          <input id="edad" type="number" name="edad" required="required" min="0" step="1" />
        </div>
        <div class="form-group">
          <label for="dni">DNI</label>
          <input id="dni" type="text" name="dni" required="required"/>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input id="email" type="email" name="email" required="required"/>
        </div>
        <div class="form-group">
          <label for="password">Contraseña (Al menos 8 caracteres sin espacios)</label>
          <input id="password" type="password" name="password" required="required" minlength="8" pattern="^\S{8,}$" title="La contraseña debe tener al menos 8 caracteres y no puede contener espacios en blanco." />
        </div>
        <div class="form-group">
          <label for="cpassword">Confirmar Contraseña</label>
          <input id="cpassword" type="password" name="cpassword" required="required" minlength="8" pattern="^\S{8,}$" title="La contraseña debe tener al menos 8 caracteres y no puede contener espacios en blanco." />
          <div id="signupMessage" style=" color: rgb(249, 134, 134); font-size: 16px; font-weight: bold;"><%= signupMessage %></div>
        </div>
        <div class="form-group">
          <button type="submit">Register</button>
        </div>
      </form>
    </div>
  </div>
</div>


</body>
</html>
